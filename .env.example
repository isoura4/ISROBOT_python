# Configuration du bot Discord
# Remplacez ces valeurs par vos vraies valeurs

# ID de votre application Discord
app_id=123456789012345678

# Token secret de votre bot
secret_key=VOTRE_TOKEN_ICI

# ID de votre serveur Discord
server_id=123456789012345678

# Configuration de la base de données
# Chemin vers votre base de données SQLite
# Peut être un chemin relatif (./database.sqlite3) ou absolu (/path/to/database.sqlite3)
# Si relatif, il sera résolu par rapport au répertoire du bot
db_path=./database.sqlite3

# Configuration Twitch API
# Obtenez ces valeurs sur https://dev.twitch.tv/console
twitch_client_id=VOTRE_CLIENT_ID_TWITCH
twitch_client_secret=VOTRE_CLIENT_SECRET_TWITCH

# Configuration YouTube API
# Obtenez une clé API sur https://console.cloud.google.com/
youtube_api_key=VOTRE_CLE_API_YOUTUBE

# Configuration Ollama AI
# URL du serveur Ollama (par défaut: http://localhost:11434)
ollama_host=http://localhost:11434
# Modèle à utiliser (par défaut: llama2)
ollama_model=llama2

# Minigame System Configuration
# Set to 'false' to globally disable the minigame system
# When disabled, all minigame commands will be unavailable
minigame_enabled=true

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Log file path (default: discord.log)
LOG_FILE=discord.log

# Maximum log file size in MB before rotation (default: 5)
LOG_MAX_SIZE_MB=5

# Number of backup log files to keep (default: 5, max: 20)
LOG_BACKUP_COUNT=5

# ============================================================================
# AI FEATURES CONFIGURATION
# ============================================================================

# Master toggle for all AI features (default: true)
# Set to 'false' to completely disable all AI functionality
AI_ENABLED=true

# Enable/disable the /ai command (default: true)
AI_COMMAND_ENABLED=true

# Enable/disable AI message moderation (default: true)
AI_MODERATION_ENABLED=true

# Enable/disable AI content filtering (default: true)
AI_CONTENT_FILTER_ENABLED=true

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

# Directory for database backups (default: backups)
BACKUP_DIR=backups

# Maximum number of backup files to keep (default: 10, max: 100)
MAX_BACKUPS=10

# ============================================================================
# RATE LIMITING CONFIGURATION
# ============================================================================

# Maximum requests per user in time window (default: 10)
# RATE_LIMIT_USER_MAX=10

# Time window for user rate limiting in seconds (default: 60)
# RATE_LIMIT_USER_WINDOW=60

# Maximum requests per server in time window (default: 50)
# RATE_LIMIT_SERVER_MAX=50

# Time window for server rate limiting in seconds (default: 60)
# RATE_LIMIT_SERVER_WINDOW=60

# Default cooldown between same command in seconds (default: 3)
# RATE_LIMIT_COOLDOWN=3